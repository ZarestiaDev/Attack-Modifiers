<root>
	<windowclass name="charsheet_actions" merge="join">
		<script>
			function onInit()
				if super and super.onInit then
					super.onInit();
				end

				onAdvancedCharsheet();
			end

			function onAdvancedCharsheet()
				if CompManagerAM.EXTENSIONS["Advanced Charsheet"] then
					subspells.setAnchor("top", "actions_am", "bottom", "", 22);
					subweapons.setAnchor("top", "actions_am", "bottom", "", 22);
					subitems.setAnchor("top", "actions_am", "bottom", "", 22);
					subothers.setAnchor("top", "actions_am", "bottom", "", 22);
				end
			end
		</script>
		<sheetdata>
			<subwindow name="actions_am" insertbefore="actions">
				<bounds>23,28,-29,130</bounds>
				<class>char_actions_details_am</class>
				<activate />
				<fastinit />
			</subwindow>

			<button_toggle_am name="toggle_actions_am">
				<anchored to="actionframe" position="insidetopleft" offset="7,8" />
			</button_toggle_am>
			
			<subwindow name="actions">
				<anchored>
					<top parent="actions_am" anchor="bottom"/>
					<bottom />
					<left />
					<right />
				</anchored>
				<activate />
				<class>char_actions_details</class>
				<script>
					function onInit()
						if CompManagerAM.EXTENSIONS["Advanced Charsheet"] then
							destroy();
						end
					end
				</script>
			</subwindow>
		</sheetdata>
	</windowclass>
	
